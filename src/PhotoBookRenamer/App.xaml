<Application x:Class="PhotoBookRenamer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PhotoBookRenamer.Utils.Converters"
             xmlns:views="clr-namespace:PhotoBookRenamer.Views"
             xmlns:viewModels="clr-namespace:PhotoBookRenamer.ViewModels"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/TextBlocks.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converter -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <!-- DataTemplates для связки ViewModel -> View -->
            <DataTemplate DataType="{x:Type viewModels:StartScreenViewModel}">
                <views:StartScreenView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:UniqueFoldersViewModel}">
                <views:UniqueFoldersView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:CombinedModeViewModel}">
                <views:CombinedModeView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>