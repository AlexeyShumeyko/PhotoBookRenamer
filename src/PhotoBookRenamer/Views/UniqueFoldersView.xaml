<UserControl x:Class="PhotoBookRenamer.Views.UniqueFoldersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="← Назад" 
                       Command="{Binding SwitchToStartCommand}"
                       Style="{StaticResource SecondaryButton}"
                       Grid.Column="0"/>

                <TextBlock Text="Unique Folders Mode" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Grid.Column="1"/>

                <Button Content="Экспорт" 
                       Command="{Binding ExportCommand}"
                       Style="{StaticResource PrimaryButton}"
                       Grid.Column="2"
                       Margin="10,0,0,0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Control Panel -->
                <Border Background="{StaticResource CardBackgroundBrush}" 
                       CornerRadius="8" 
                       Padding="20"
                       Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Выбор папок" 
                                  Style="{StaticResource HeaderText}"
                                  Margin="0,0,0,10"/>

                        <TextBlock Text="Выберите несколько папок. Каждая папка станет отдельной книгой. Все папки должны содержать одинаковое количество JPG файлов."
                                  Style="{StaticResource BodyText}"
                                  Margin="0,0,0,15"/>

                        <Button Content="Выбрать папки..." 
                               Command="{Binding SelectFoldersCommand}"
                               Style="{StaticResource PrimaryButton}"
                               HorizontalAlignment="Left"/>

                        <TextBlock Text="{Binding StatusMessage}"
                                  Style="{StaticResource CaptionText}"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Books List -->
                <ItemsControl ItemsSource="{Binding Books}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource CardBackgroundBrush}" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Cover -->
                                    <Border Grid.Column="0" 
                                           Width="150" 
                                           Height="200" 
                                           Background="#F5F5F5"
                                           CornerRadius="4"
                                           Margin="0,0,15,0">
                                        <Grid>
                                            <Image Source="{Binding Cover.FilePath}" 
                                                   Stretch="UniformToFill"/>
                                            <Border Background="#80000000" 
                                                   VerticalAlignment="Bottom"
                                                   Padding="5">
                                                <TextBlock Text="Обложка" 
                                                          Foreground="White" 
                                                          FontSize="10"
                                                          HorizontalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- Book Details -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" 
                                                  Style="{StaticResource SubHeaderText}"
                                                  Margin="0,0,0,10"/>

                                        <TextBlock Text="Развороты:" 
                                                  Style="{StaticResource BodyText}"
                                                  Margin="0,0,0,5"/>

                                        <!-- Spreads Preview -->
                                        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                                     VerticalScrollBarVisibility="Disabled"
                                                     Height="80">
                                            <ItemsControl ItemsSource="{Binding Spreads}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Width="60" 
                                                               Height="60" 
                                                               Background="#F5F5F5"
                                                               CornerRadius="2"
                                                               Margin="0,0,5,0"
                                                               Cursor="Hand">

                                                            <Border.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick" 
                                                                              Command="{Binding DataContext.ChangeCoverCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                              CommandParameter="{Binding}"/>
                                                            </Border.InputBindings>

                                                            <Grid>
                                                                <Image Source="{Binding FilePath}" 
                                                                       Stretch="UniformToFill"/>

                                                                <Border Background="#40000000" 
                                                                       VerticalAlignment="Bottom">
                                                                    <TextBlock Text="Сделать обложкой" 
                                                                              Foreground="White" 
                                                                              FontSize="7"
                                                                              HorizontalAlignment="Center"
                                                                              TextWrapping="Wrap"
                                                                              Padding="2"/>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>

                                        <TextBlock Text="Нажмите на изображение, чтобы сделать его обложкой" 
                                                  Style="{StaticResource CaptionText}"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <TextBlock Text="Выберите папки чтобы начать" 
                          Style="{StaticResource BodyText}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="0,50,0,0"
                          Visibility="{Binding Books.Count, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>