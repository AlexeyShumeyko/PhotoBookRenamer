<UserControl x:Class="PhotoBookRenamer.Views.StartScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <TextBlock Text="PhotoBook Renamer" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Mode Selection -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Unique Folders Mode -->
            <Border Grid.Column="0" 
                   Background="{StaticResource CardBackgroundBrush}"
                   CornerRadius="8"
                   Padding="20"
                   Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding SwitchToUniqueFoldersCommand}"/>
                </Border.InputBindings>

                <StackPanel>
                    <TextBlock Text="📁" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Unique Folders Mode" 
                              FontSize="18" 
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,5"/>
                    <TextBlock Text="Выберите несколько папок. Каждая папка = одна книга. Автоматическое определение обложки."
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              Foreground="{StaticResource SecondaryTextBrush}"/>
                    <Button Content="Выбрать этот режим"
                           Command="{Binding SwitchToUniqueFoldersCommand}"
                           Style="{StaticResource PrimaryButton}"
                           Margin="0,20,0,0"/>
                </StackPanel>
            </Border>

            <!-- Combined Mode -->
            <Border Grid.Column="2" 
                   Background="{StaticResource CardBackgroundBrush}"
                   CornerRadius="8"
                   Padding="20"
                   Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding SwitchToCombinedModeCommand}"/>
                </Border.InputBindings>

                <StackPanel>
                    <TextBlock Text="🔄" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Combined Mode" 
                              FontSize="18" 
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,5"/>
                    <TextBlock Text="Перетащите файлы. Создайте структуру книг вручную. Полный контроль над расположением."
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              Foreground="{StaticResource SecondaryTextBrush}"/>
                    <Button Content="Выбрать этот режим"
                           Command="{Binding SwitchToCombinedModeCommand}"
                           Style="{StaticResource PrimaryButton}"
                           Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBrush}" Padding="10">
            <TextBlock Text="Приложение для переименования фото-книг • Безопасная работа с копиями файлов"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      FontSize="12"/>
        </Border>
    </Grid>
</UserControl>